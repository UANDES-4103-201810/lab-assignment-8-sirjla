<p id="notice"><%= notice %></p>

<h1>Products of <%= @username %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.weight %></td>
        <td><%= product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

